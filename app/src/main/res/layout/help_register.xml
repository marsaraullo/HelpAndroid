<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/gl_top_most"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/gl_top_most"
        android:id="@+id/tv_category"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Login"
        android:textStyle="bold"
        />
    <View
        android:id="@+id/v_divider"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toLeftOf="@+id/gl_right"
        app:layout_constraintLeft_toRightOf="@+id/gl_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_category"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>

    <EditText
        android:hint="Enter Username"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
       app:layout_constraintTop_toBottomOf="@+id/v_divider"
        app:layout_constraintRight_toLeftOf="@+id/gl_right"
        app:layout_constraintLeft_toRightOf="@+id/gl_left"

        android:id="@+id/et_username"
        android:background="@drawable/border"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <EditText
        android:textSize="20sp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_username"
        app:layout_constraintRight_toLeftOf="@+id/gl_right"
        app:layout_constraintLeft_toRightOf="@+id/gl_left"
        android:id="@+id/et_password"
        android:background="@drawable/border"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <EditText
        android:textSize="20sp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        app:layout_constraintRight_toLeftOf="@+id/gl_right"
        app:layout_constraintLeft_toRightOf="@+id/gl_left"
        android:id="@+id/et_confirm_password"
        android:background="@drawable/border"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/et_confirm_password"
        android:id="@+id/tv_category2"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Personal Information"
        android:textStyle="bold"
        />
    <View

        android:id="@+id/v_divider2"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toLeftOf="@+id/gl_right"
        app:layout_constraintLeft_toRightOf="@+id/gl_left"
        app:layout_constraintTop_toBottomOf="@+id/tv_category2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>

    <EditText
        android:textSize="20sp"
        android:hint="Enter Firstname"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/v_divider2"
        app:layout_constraintRight_toLeftOf="@+id/gl_right"
        app:layout_constraintLeft_toRightOf="@+id/gl_left"
        android:id="@+id/et_firstname"
        android:background="@drawable/border"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <EditText
        android:textSize="20sp"
        android:hint="Enter Middlename"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_firstname"
        app:layout_constraintRight_toLeftOf="@+id/gl_right"
        app:layout_constraintLeft_toRightOf="@+id/gl_left"
        android:id="@+id/et_middlename"
        android:background="@drawable/border"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <EditText
        android:textSize="20sp"
        android:hint="Enter Lastname"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_middlename"
        app:layout_constraintRight_toLeftOf="@+id/gl_right"
        app:layout_constraintLeft_toRightOf="@+id/gl_left"
        android:id="@+id/et_lastname"
        android:background="@drawable/border"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <EditText
        android:textSize="20sp"
        android:hint="Enter Address"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_lastname"
        app:layout_constraintRight_toLeftOf="@+id/gl_right"
        app:layout_constraintLeft_toRightOf="@+id/gl_left"
        android:id="@+id/et_address"
        android:background="@drawable/border"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <EditText
        android:textSize="20sp"
        android:hint="Enter Email Address"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_address"
        app:layout_constraintRight_toLeftOf="@+id/gl_right"
        app:layout_constraintLeft_toRightOf="@+id/gl_left"
        android:id="@+id/et_email"
        android:background="@drawable/border"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <EditText
        android:textSize="20sp"
        android:hint="Enter Phone Number"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        app:layout_constraintRight_toLeftOf="@+id/gl_right"
        app:layout_constraintLeft_toRightOf="@+id/gl_left"
        android:id="@+id/et_contact"
        android:background="@drawable/border"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        android:textSize="20sp"
        android:textAllCaps="false"
        android:text="Submit"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_contact"
        app:layout_constraintRight_toLeftOf="@+id/gl_right"
        app:layout_constraintLeft_toRightOf="@+id/gl_left"
        android:id="@+id/bt_submit"
        android:background="@drawable/button_selector"
        android:padding="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <android.support.constraint.Guideline
        android:id="@+id/gl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>
    <android.support.constraint.Guideline
        android:id="@+id/gl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"/>

</android.support.constraint.ConstraintLayout>